<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <PropertyGroup>
        <PackageId>ComingSoon.OrchardCore</PackageId>
        <Title>Coming Soon Theme for Orchard Core</Title>
        <Description>Bootstrap 4 theme with an under construction landing page based on Start Bootstrap template.</Description>
